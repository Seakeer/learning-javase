<?xml version="1.0" encoding="UTF-8" ?>
<configuration scan="true" scanPeriod="10 minutes" debug="false">


    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder charset="utf-8">
            <!--@formatter:off-->
            <pattern>
                <!--                [%d{yyyy-MM-dd HH:mm:ss.SSS}][%level][%thread][%logger{15}][%msg]%n-->
                [%d{yyyy-MM-dd HH:mm:ss.SSS}][%level][%X{TRACE_ID}][%thread] %msg%n
            </pattern>
            <!--@formatter:on-->
        </encoder>
    </appender>

    <appender name="consoleAsync" class="ch.qos.logback.classic.AsyncAppender">
        <neverBlock>true</neverBlock>
        <queueSize>10240</queueSize>
        <appender-ref ref="console"/>
    </appender>

    <root level="INFO">
        <appender-ref ref="consoleAsync"/>
    </root>

    <logger name="ch.qos" level="ERROR">
    </logger>

    <logger name="me.seakeer" level="INFO">
    </logger>
</configuration>